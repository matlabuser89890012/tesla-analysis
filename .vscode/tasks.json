{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run main.py",
      "type": "shell",
      "command": "python codes/main.py",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "pytest --cov=codes --cov-report=term-missing",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint code",
      "type": "shell",
      "command": "flake8 codes",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Format code",
      "type": "shell",
      "command": "black codes",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Docker image",
      "type": "shell",
      "command": "docker build -t tesla-stock-analysis:latest .",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Docker Compose",
      "type": "shell",
      "command": "docker compose up --build",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Docker Compose (detached)",
      "type": "shell",
      "command": "docker compose up -d --build",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Docker Compose",
      "type": "shell",
      "command": "docker compose down",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Check GPU status",
      "type": "shell",
      "command": "python codes/check_gpu.py",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Create Conda Environment",
      "type": "shell",
      "command": "conda env create -f environment.yml",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Update Conda Environment",
      "type": "shell",
      "command": "conda env update -f environment.yml",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Requirements",
      "type": "shell",
      "command": "pip install -r requirements.txt -r requirements-dev.txt",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Run GPU Check",
      "type": "shell",
      "command": "docker exec -it tesla-stock-analysis-notebook-1 python /app/codes/check_gpu.py",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Everything (startup.sh)",
      "type": "shell",
      "command": "chmod +x startup.sh && ./startup.sh",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "windows": {
        "command": ".\\startup.sh"
      }
    }
  ]
}
